<Window x:Class="PolynomialGraphApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Polynomial Calculator" Height="350" Width="525">
    <Grid>
        <ComboBox x:Name="PolynomialSelector" SelectionChanged="PolynomialSelector_SelectionChanged" Margin="10" />
        <Button Content="Calculate" Click="CalculateButton_Click" Margin="10,50,10,0" VerticalAlignment="Top" />
        <TextBlock x:Name="ResultTextBlock" Margin="10,100,10,10" TextWrapping="Wrap" />
    </Grid>
</Window>